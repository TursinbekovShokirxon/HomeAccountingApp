@Html.AntiForgeryToken()

<div class="container">
    <h1 class="text-center my-4">Домашняя бухгалтерия</h1>


    <div class="row">
        <!-- Левая часть: форма -->
        <div class="col-md-6 col-lg-6">
            <div class="card mb-4 border-light shadow-sm">
                <!-- Добавлены классы для светлой границы -->
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Добавить запись</h5>
                </div>
                <div class="card-body bg-light">
                    <!-- Светлый фон формы -->
                    <form id="transactionForm">
                        <div class="form-group mb-3">
                            <div class="form-group mb-3">
                                <label for="createdDate" class="form-label">Дата</label>
                                <input type="date" class="form-control border-light" id="createdDate" required> <!-- Светлая граница -->
                            </div>

                            <label class="form-label">Тип операции</label>
                            <div class="form-check ps-0 mb-2">
                                <!-- Улучшенные отступы -->
                                <input class="form-check-input" type="radio" name="transactionType" id="incomeType" value="income" checked>
                                <label class="form-check-label ms-2" for="incomeType">Доход</label>
                            </div>
                            <div class="form-check ps-0 mb-3">
                                <!-- Улучшенные отступы -->
                                <input class="form-check-input" type="radio" name="transactionType" id="expenseType" value="expense">
                                <label class="form-check-label ms-2" for="expenseType">Расход</label>
                            </div>
                        </div>


                        <div class="form-group mb-3">
                            <label for="category" class="form-label">Категория</label>
                            <select class="form-control border-light" id="category" required>
                                <!-- Светлая граница -->
                                <option value="" disabled selected>Выберите категорию</option>
                            </select>
                        </div>


                        <div class="form-group mb-3">
                            <label for="amount" class="form-label">Сумма</label>
                            <div class="input-group">
                                <input type="number" class="form-control border-light" id="amount" min="0" step="0.001" required> 
                                <span class="input-group-text bg-white border-light">Сум</span> 
                            </div>
                        </div>


                        <div class="form-group mb-3">
                            <label for="comment" class="form-label">Комментарий</label>
                            <textarea class="form-control border-light" id="comment" rows="2"></textarea> 
                        </div>


                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <!-- Улучшенная кнопка -->
                            <i class="bi bi-plus-circle me-2"></i>Добавить
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Правая часть: статистика -->
        <div class="col-md-6 col-lg-6">
            <!-- Форма для фильтрации -->
            <div class="mb-3">
                <label for="monthStatFilter" class="form-label">Фильтр по месяцу:</label>
                <select id="monthStatFilter" class="form-select">
                    <!-- Месяцы будут добавлены динамически -->
                </select>
            </div>
            <div class="card mb-4 border-light shadow-sm">
                <!-- Добавлены классы для светлой границы -->
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">статистика</h5>
                </div>
                <div class="card-body bg-light">
                    <!-- Светлый фон -->
                    <div class="d-flex justify-content-between align-items-center mb-3 p-2 bg-white rounded">
                        <!-- Карточки для статистики -->
                        <span class="fw-medium">Доходы:</span>
                        <span id="totalIncome" class="text-success fw-bold">0 сум</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3 p-2 bg-white rounded">
                        <span class="fw-medium">Расходы:</span>
                        <span id="totalExpense" class="text-danger fw-bold">0 сум</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center p-2 bg-white rounded">
                        <span class="fw-medium">Баланс:</span>
                        <span id="balance" class="fw-bold">0 сум</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Подключение иконок Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/indexcss.css"></link>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/statisticJS.js"></script>
<script src="~/js/indexJS.js"></script>
